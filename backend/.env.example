# Database Configuration
DATABASE_URL=postgresql://user:password@localhost/securaflow

# Security - MUST be changed in production!
SECRET_KEY=your-secret-key-change-in-production-generate-a-random-string-here

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://securaflow-frontend.onrender.com

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_ENABLED=true

# ML Model Configuration
MODEL_PATH=./models/anomaly_detector_v1.pkl
ANOMALY_THRESHOLD=0.6

# Logging
LOG_LEVEL=INFO
STRUCTURED_LOGGING=true

# Metrics Aggregation
METRICS_WINDOW_SECONDS=60

# Model Evaluation
MODEL_EVALUATION_LOGS=500

# Authentication
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080
